{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ],
  },
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "target": "esnext",
    "module": "nodenext",
    "allowJs": true,
    "composite": true,
    "moduleDetection": "auto",
    "useDefineForClassFields": true,
    "moduleResolution": "nodenext",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": false,
    "incremental": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "esnext"
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "node"
    ]
  },
  "typeAcquisition": {
    "enable": true
  },
  "exclude": [
    "dist",
    "node_modules",
  ],
  "include": [
    "src/**/*.ts",
    "./*.ts",
    "scripts",
    "archcache",
    "auth.json",
    "config.json",
    "rpg/**/*.ts",
    "rpg/**/*.json",
    "plugins/**/*.ts",
    "plugins/**/*.json",
    "package.json",
    "commands"
  ]
}